<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\BuildTools\Microsoft.Dynamics.RetailSdk.Build.props" />
  <Import Project="..\..\..\BuildTools\Common.props" />
  <Import Project="..\..\..\BuildTools\Microsoft.Dynamics.RetailSdk.Build.settings" />

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <AssemblyName>$(AssemblyNamePrefix).Commerce.RetailProxy.CardReader</AssemblyName>
    <RootNamespace>CDC.Commerce.RetailProxy.CardReader</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

	<ItemGroup>
		<RetailServerExtensionAssemblies Include="..\..\RetailServer\Extension.CardReader\bin\$(Configuration)\net461\$(AssemblyNamePrefix).RetailServer.CardReader.dll" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\RetailServer\Extension.CardReader\RetailServer.Extensions.CardReader.csproj" />
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Composition" Version="1.2.0" />
    <PackageReference Include="Microsoft.Dynamics.Commerce.RetailProxy" Version="$(ChannelRepoPackagesVersion)" />
    <PackageReference Include="Microsoft.Dynamics.Commerce.Tools.ExtensionsProxyGenerator" Version="$(ChannelRepoPackagesVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CDC.Commerce.Runtime.CardReader">
      <HintPath>..\..\..\References\CDC.Commerce.Runtime.CardReader.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Import Project="..\..\..\BuildTools\Microsoft.Dynamics.RetailSdk.Build.targets" />
</Project>